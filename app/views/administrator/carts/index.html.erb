    </div>




    <div>
   <% if cart.ship_to_another_id.blank? %>
       送付先： 〒<%= cart.user.postal_code %><br>
    <%= cart.user.addres %>
    <% else %>
    送付先：<%= cart.ship_to_another.last_name %>
    <%= cart.ship_to_another.first_name %><br>
    〒<%= cart.ship_to_another.postal_code %><br>
    <%= cart.ship_to_another.address %>
    <% end %>
    </div>



        </div>
<% end %>
<% end %>



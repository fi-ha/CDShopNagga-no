<h1>問い合わせ閲覧</h1>
<h2>未返信</h2>
<table>
  <% @unreplycontacts.each do |unreplycontact| %>
  <% user = find_user(unreplycontact) %>
	<tbody>
		<tr>
			<td colspan="2"><p><strong>投稿日時:</strong><%= unreplycontact.created_at %></p></td>
			<td colspan="2"><p><strong>投稿者:</strong>
        <%= if user
              link_to "#{user.first_name + user.first_name}様"
            else
              unreplycontact.email
            end %></p></td>
		</tr>
		<tr>
			<td colspan="3"><p><strong>題名:</strong><%= unreplycontact.subject %></p></td>
			<td > <%= link_to "返信", administrator_contact_path(unreplycontact) %> </td>
		</tr>
    <tr>
			<td colspan="4">本文</td>
		</tr>
		<tr>
			<td colspan="4"><%= unreplycontact.body %></td>
		</tr>
	</tbody>
  <% end %>
</table>
<h2>返信済み</h2>

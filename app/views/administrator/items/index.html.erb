<h1>商品一覧画面</h1>
<!-- 歌手、ジャンル、ぷれーやーでタブ分け -->
<div class="">

<% @items.each do |item| %>
	<div class="">
		<div class="">
			<%= attachment_image_tag(item, :image, :fill, 60, 60, format: 'jpeg')  %>
		</div>
		<table>
			<tr>
				<td>商品名：</td>
				<td><%= item.item_name %></td>
			</tr>
			<% item.singers.each do |singer| %>
				<tr>
					<td>アーティスト名：</td>
					<td><%= singer.singer_name %></td>
				</tr>
			<% end %>
			<tr>
				<td>価格：</td>
				<td><%= item.price %></td>
			</tr>
		</table>
		<%= link_to '編集', edit_item_path(item.id) %>
		<%= link_to '削除', item_path(item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
	</div>
<% end %>

</div>
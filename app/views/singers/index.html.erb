    <div class="col-md-8">

     <%= form_for(@singer) do |f| %>
     <h4>アーティス名<%= f.text_field :singer_name, :size => '50' %><%= f.submit "登録", class: "btn btn bg-success", data:{confirm:"本当に登録しますか？"} %></h4>
	 <% end %>


<br>


<h3>登録アーティスト一覧</h3>

 <table class= "table table-striped">
		<% @singers.each do |singer| %>
　　　　　　<tbody>
			<tr>
				<td>
                   <%= singer.singer_name %>
				</td>
				<td>
					<%= link_to "編集", edit_singer_path(singer.id) , class: "singer_#{singer.id} btn btn bg-success" %>
				</td>
				<td>
					<%= link_to "削除", singer_path(singer.id), method: :delete,  class: "singer_#{singer.id} btn btn bg-danger, btn btn-danger dropdown-toggle", "data-confirm" => "本当に削除しますか？ " %>
				</td>
			</tr>
		</tbody>
	  <% end %>
	</table>
</div>
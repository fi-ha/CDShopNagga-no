<h2>My Favorite</h2>

<% @favorites.each do |favorite| %>
	<div class="">
		<table>
			<tr>
				<td class="col-lg-6">
                    <%= link_to item_path(favorite.item.id) do %>
					<%= attachment_image_tag(favorite.item, :image, :fill, 240, 240, format: 'jpeg') %><br>
					商品名：<%= favorite.item.item_name %><br>
                    <% end %>
                    <p>価格（税込）：<%= (favorite.item.price*BigDecimal("1.08")).ceil %>円</p>
                </td>

				<td>
				<%= link_to 'カートへ', new_cart_path, class: "btn btn bg-warning col-lg-7" %>
				<%= link_to 'お気に入りを解除する', item_favorites_path(favorite.item.id), method: :delete, class: "btn btn bg-info col-lg-7" %>
				</td>
			</tr>
		</table>
	</div>
<% end %>
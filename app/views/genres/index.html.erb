 <div class="col-md-8">

<%= form_for(@genre) do |f| %>
     <h4>アーティス名<%= f.text_field :genre_name, :size => '50' %><%= f.submit "登録", class: "btn btn bg-success", data:{confirm:"本当に登録しますか？"} %></h4>
	 <% end %>


<br>


<h3>登録ジャンル覧</h3>

 <table class= "table table-striped">
		<% @genres.each do |genre| %>
　　　　　　<tbody>
			<tr>
				<td>
                   <%= genre.genre_name %>
				</td>
				<td>
					<%= link_to "編集", edit_genre_path(genre.id) , class: "genre_#{genre.id} btn btn bg-success" %>
				</td>
				<td>
					<%= link_to "削除", genre_path(genre.id), method: :delete,  class: "genre_#{genre.id} btn btn bg-danger, btn btn-danger dropdown-toggle", "data-confirm" => "本当に削除しますか？ " %>
				</td>
			</tr>
		</tbody>
	  <% end %>
	</table>
</div>


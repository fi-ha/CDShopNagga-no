<!-- 未ログインの状態でカート追加、購入ボタンクリック時に表示 -->
<% if flash[:alert] %>
	<p><%= flash[:alert] %></p>
<% end %>
<h1><%= @item.item_name %>の詳細</h1>
<div class="">
	<div class="">
		<%= attachment_image_tag @item,:image %>
	</div>
	<div class="">
		<%= @item.item_name %><br>
		<% @item.singers.each do |singer| %>
			<%= singer.singer_name %><br>
		<% end %>
		<% @item.genres.each do |genre| %>
			<%= genre.genre_name %><br>
		<% end %>
		<%= @item.label.label_name %><br>
		価格(税込)：<%= (@item.price*BigDecimal("1.08")).ceil %>円<br>
		在庫：<%= @item.stock.count %>点
	</div>

	<div class="">
		<h2>収録曲</h2>
		<% @item.songs.each do |song| %>
			<%= song.disk %>
		<% end %>
			<ul>
				<% @item.songs.each do |song| %>
					<li><%= song.song_name %></li>
				<% end %>
			</ul>
	</div>
	<div class="">
		<% if @item.favorited_by?(current_user) %>
			<p>
				<%= link_to 'お気に入り登録済み', item_favorites_path(@item), method: :delete %>
			</p>
		<% else %>
			<p>
				<%= link_to 'お気に入り登録する', item_favorites_path(@item), method: :post %>
			</p>
		<% end %>
		<p>
			<%= link_to 'カートに追加する', carts_path(@item), method: :post %>
		</p>
		<p>
			<%= link_to '購入', carts_path(@item), method: :post %>
		</p>
		<p>
			<%= link_to 'レビューを投稿する', new_item_reviews_path(@item.id) %>
		</p>
	</div>
	<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>
<%= form_for [@item, @review] do |f| %>
	<%= f.text_area :body %>
	<%= f.submit '投稿' %>
<% end %>
	<!-- 商品に基づいたレビューを一覧表示させる -->
	<table class="">
		<tr>
			<td>投稿者</td>
			<td>レビュー</td>
			<td></td>
			<td></td>
		</tr>
		<% @item.reviews.each do |review| %>
		<tr>
			<td>
				<%= review.user.last_name %> 
				<%= review.user.first_name %>
			</td>
			<td>
				<%= review.body %>
			</td>
			<!-- レビュー投稿ユーザーなら”編集”、”削除”を表示させる -->
			<% if review.user == current_user %>
				<td>
					<%= link_to "編集", edit_review_path(review.id) %>
				</td>
				<td>
					<%= link_to "削除", item_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>
				</td>
			<% else %>
				<td></td>
				<td></td>
			<% end %>
		</tr>
		<% end %>
	</table>
</div>
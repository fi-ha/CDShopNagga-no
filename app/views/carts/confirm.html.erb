<h1>Coformation</h1>
<p>内容がよろしければ確定ボタンを押してください。</p>

<h3>ご注文内容</h3>

<%= link_to "カートに戻る", cart_edit_path %>

<section class="cart-items">
  <table>

    <!-- カート内のitemを繰り返し表示 -->
   <% @items.each do |item| %>

    <!-- ここで該当する歌手、ジャンル、レーベル、ストックを取り出す -->
    <% singer = item.@item_singers.singers %>
    <% genre  = item.@item_genres.genres %>
    <% stock  = item.stocks %>
    <% label  = item.labels %>
    <!-- 商品ごとの合計金額をここで出す -->
    <% count        = @item_carts.find_by(id: item.id).count %>
    <% count_price  = item.price * count %>

    <!-- もしCDだったら -->
    <% if item.description.empty? %>
    <tbody class="cart-in-CD">
      <tr>
        <td rowspan="5"><%= attachment_image_tag(item, :image, :fill, 300, 300, format: 'jpeg') %></td>
        <td rowspan="2"><p>CDタイトル</p><h3><%= item.item_name %></h3></td>
        <td></td>
        <td class='multiply_price' rowspan="5"><%=  item.price.to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <td rowspan="5"><p><%= count %>枚</p></td>
      </tr>
      <tr>
        <td><p>歌手</p><%= singer.name %></td>
      </tr>
      <tr>
        <td><p>レーベル名</p><%= label.name %></td>
      </tr>
      <tr>
        <td><p>ジャンル</p><%= genre.name %></td>
      </tr>
    </tbody>

    <!-- もしプレイヤーだったら -->
    <% else %>
    <tbody class="cart-in-Player">
      <tr>
        <td rowspan="4"><%= attachment_image_tag(item, :image, :fill, 300, 300, format: 'jpeg') %></td>
        <td rowspan="4"><p>プレーヤー名</p><h3><%= item.item_name %></h3></td>
        <td></td>
        <td class='multiply_price' rowspan="4"><%=  item.price.to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <td><p><%= count %>台</p></td>
      </tr>
    </tbody>

    <% end %>

   <% end %>
  </table>
</section>

<h4>合計<%= @sumprice %></h4>
<h4>送料全国どこでも500円</h4>
<h4>総合計<%= @sumprice + 500 %></h4>

<h3>配送先</h3>

<% if @ship_to_another.isnot %>
<h4>登録している住所</h4>
<p>郵便番号</p>
<%= current_user.postalcode %>
<p>住所</p>
<%= current_user.addres %>
<p>電話番号</p>
<%= current_user.phonenumber %>

<% else %>
<h4>他の住所</h4>
<p>郵便番号</p>
<%= @ship_to_another.postalcode %>
<p>住所</p>
<%= @ship_to_another.address %>
<p>電話番号</p>
<%= @ship_to_another.phonenumber %>

<% end %>

<%= link_to "住所選択に戻る", ship_to_another_path %>

<h3>支払い方法</h3>

<!-- ここはコントローラーでstatusから表示内容を変えてみる -->
<%= @payment %>

<%= link_to "支払い方法選択に戻る", payment_edit_path %>
<%= link_to "購入確定", confirm_ginko_path, sumprice: @sumprice %>
